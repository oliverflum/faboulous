{
  "info": {
    "name": "Faboulous API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "List Features",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/features",
          "host": ["{{base_url}}"],
          "path": ["api", "features"]
        }
      }
    },
    {
      "name": "Add Feature",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New Feature\",\n  \"type\": \"boolean\",\n  \"default_value\": false\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/config/feature",
          "host": ["{{base_url}}"],
          "path": ["api", "config", "feature"]
        }
      }
    },
    {
      "name": "Update Feature",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Feature\",\n  \"type\": \"string\",\n  \"default_value\": \"default\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/config/feature/:id",
          "host": ["{{base_url}}"],
          "path": ["api", "config", "feature", ":id"]
        }
      }
    },
    {
      "name": "Get Feature",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/config/feature/:id",
          "host": ["{{base_url}}"],
          "path": ["api", "config", "feature", ":id"]
        }
      }
    },
    {
      "name": "Delete Feature",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/config/feature/:id",
          "host": ["{{base_url}}"],
          "path": ["api", "config", "feature", ":id"]
        }
      }
    }
  ]
}
